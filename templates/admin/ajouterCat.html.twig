{% extends ('base.html.twig') %}
    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="{{asset('css/custom.css')}}" type="text/css" media="all" />
    {% endblock %}


{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}
{% block title %}Créer une nouvelle catégorie{% endblock %}
{% block body %}
<div class="container">

           <div class="row col-6 mx-auto">    
                <h3 id="formTitle">Créer une nouvelle catégorie</h3>
                  {% for message in app.flashes('erreur') %} 
    <div class="flash-notice">
      <h2 id="messageCart" class="mt-3">{{message}}</h2>
    </div>
    {% endfor %}

    

                {{ form_start(form) }}
            <section class="mt-2">
            {{form_label(form.nom, 'Nom de la nouvelle catégorie:')}}
            {{form_widget(form.nom,{attr:{'class':' form-control'} })}}
            {{form_errors(form.nom)}}
            </section>
            <section class="mt-3 mb-1 justify-content-center d-flex">
            {{ form_widget(form.Ajouter, {'attr': {'class':'btn btn-success mx-auto'} } ) }}
            </section>
            
                {{form_end(form)}}
                {% for cat in categories %}
                <p>{{cat.id}}) {{cat.nom}}</p>
                {% endfor %}
            <section><a href="{{path('controle_admin')}}" class="btn btn-warning justify-content-end">Retour menu Admin </a></section>

            </div>
        </div>
{% endblock %}
                
{% extends ('base.html.twig') %}
    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="{{asset('css/custom.css')}}" type="text/css" media="all" />
    {% endblock %}


{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}
{% block title %}Tous les produits du catalogue{% endblock %}
{% block body %}
<div class="container">

           <div class="row col-6 mx-auto">    
                <h3 id="formTitle">Tous les produits du catalogue</h3>


        <table class="table table-striped m-2">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>En stock</th>
                    <th>Minimale</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                <tr>
                    <td>{{produit.nom}}</td>
                    <td>{{produit.prix|number_format(2, ',', ',')}} $</td>
                    <td>{{produit.quanStock}}</td>
                    <td>{{produit.quanMin}}</td>
                    
                    
                    
                </tr>

                {% endfor %}
</tbody>
</table>

            <section><a href="{{path('controle_admin')}}" class="btn btn-warning justify-content-end m-2">Retour menu Admin </a></section>

            </div>
        </div>
{% endblock %}
                
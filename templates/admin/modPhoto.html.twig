{% extends ('base.html.twig') %}
    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="{{asset('css/custom.css')}}" type="text/css" media="all" />
    {% endblock %}


{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}
{% block title %}Modifier le produit {{produit.id}}{% endblock %}
{% block body %}
<div class="container">

           <div class="row col-6 mx-auto">  
           <h2 id="formTitle">{{produit.nom}} ({{produit.id}})</h2>

                {% if principale %}
                
                <h3 id="formTitle">Modifier la photo principale</h3>
                {% else %}
                <h3 id="formTitle">Modifier la photo des details</h3>
                {% endif %}
                  {% for message in app.flashes('erreur') %} 
    <div class="flash-notice">
      <h2 id="messageCart" class="mt-3">{{message}}</h2>
    </div>
    {% endfor %}
                      {% for message in app.flashes('succes') %} 
    <div class="flash-notice">
      <h2 id="messageCart" class="mt-3">{{message}}</h2>
    </div>
    {% endfor %}
    


   <article class="col-6">
      {{form_start(form)}}
      {{form_label(form.imageProduit, "Photo produit (max 50 Ko):")  }}
      {{form_errors(form.imageProduit) }}
         <input type="Hidden" value="100000" name='MAX_FILE_SIZE'>
      {{form_widget(form.imageProduit)  }}
      {{form_rest(form) }}
      {{form_end(form)}}
   </article>
    


                <hr>
            
            <section><a href="{{ path('produit_admin',{id: produit.id})}}" class="btn btn-warning justify-content-end my-1">Retour item </a></section>

            </div>
        </div>
{% endblock %}
                
{% extends ('base.html.twig') %}
    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="{{asset('css/custom.css')}}" type="text/css" media="all" />
    {% endblock %}


{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}
{% block title %}Modifier le produit {{produit.id}}{% endblock %}
{% block body %}
<div class="container">

           <div class="row col-6 mx-auto">    
                <h3 id="formTitle">Modifier le produit {{produit.id}}</h3>
                  {% for message in app.flashes('erreur') %} 
    <div class="flash-notice">
      <h2 id="messageCart" class="mt-3">{{message}}</h2>
    </div>
    {% endfor %}

    

                {{ form_start(form) }}
            <section class="mt-2">
            {{form_label(form.nom, 'Nom du nouveau produit:')}}
            {{form_widget(form.nom,{attr:{'class':' form-control'} })}}
            {{form_errors(form.nom)}}
            </section>
            <section class="mt-2">
            {{form_label(form.prix, 'Prix:')}}
            {{form_widget(form.prix,{attr:{'class':' form-control'} })}}
            {{form_errors(form.prix)}}
            </section >
            <section class="mt-2">
            {{form_label(form.description, 'Description :')}}
            {{form_widget(form.description,{attr:{'class':' form-control'} })}}
            {{form_errors(form.description)}}
            </section>
            <section class="mt-2">
            {{form_label(form.categorie, 'Catégorie :')}}
            {{form_widget(form.categorie,{attr:{'class':' form-control'} })}}
            {{form_errors(form.categorie)}}
            </section>
            <section class="mt-2">
            {{form_label(form.quanStock, 'Quantité stock :')}}
            {{form_widget(form.quanStock,{attr:{'class':' form-control'} })}}
            {{form_errors(form.quanStock)}}
            </section>
            <section class="mt-2">
            {{form_label(form.quanMin, 'Quantité de restockage :')}}
            {{form_widget(form.quanMin,{attr:{'class':' form-control'} })}}
            {{form_errors(form.quanMin)}}
            </section>

            <section class="mt-3 mb-1 justify-content-center d-flex">
            {{ form_widget(form.Ajouter, {'attr': {'class':'btn btn-success mx-auto'}, 'label':'Modifier'} ) }}
           
            </section>
            
                {{form_end(form)}}
                <hr>
            <section><a href="{{path('modifier_photo',{id: produit.id, principale:true})}}" class="btn btn-primary justify-content-end my-1">Modifier photo principale</a></section>
            <section><a href="{{path('modifier_photo',{id: produit.id,principale:false})}}" class="btn btn-primary justify-content-end my-1">Modifier photo secondaire </a></section>
            <section><a href="{{path('controle_admin')}}" class="btn btn-warning justify-content-end my-1">Retour menu Admin </a></section>

            </div>
        </div>
{% endblock %}
                
{% extends 'base.html.twig' %}
    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="{{asset('css/custom.css')}}" type="text/css" media="all" />
    {% endblock %}


{% block javascripts %}
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}

{% block title %}Confirmation de l'achat{% endblock %}

{% block body %}
<section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card border-top border-bottom border-3" style="border-color: Green !important;">
          <div class="card-body p-5">

            <p class="lead fw-bold mb-5" style="color: Green;">Confirmation d'achat</p>

            <div class="row">
              <div class="col mb-3">
                <p class="small text-muted mb-1">Date</p>
                <p>{{ "now"|date("m/d/Y") }}</p>
              </div>
              {# <div class="col mb-3">
                <p class="small text-muted mb-1">Order No.</p>
                <p>012j1gvs356c</p>
              </div> #}
            </div>

            <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
      {% for produitCart in app.session.get('panier').getPanierItems() %}
              <div class="row">
                <div class="col-4">
                  <p>{{produitCart.produit.nom}}</p>
                </div>
                <div class="col-3">
                  <p>{{produitCart.produit.prix |number_format(2, ',', ',')}} $</p>
                </div>
                   <div class="col-2">
                    <p>X {{produitCart.quantite}} </p>
                    </div>
                  
                
                <div class="col-3">
                  <p>{{produitCart.getPrixTotal() |number_format(2, ',', ',')}} $</p>
                </div>
              </div>
              {% endfor %}
              <div class="row">
                <div class="col-9">
                  <p class="mb-0">Frais d'envoie</p>
                </div>
                <div class="col-3">
                  <p class="mb-0">9,99 $</p>
                </div>
              </div>
            </div>

            <div class="row my-4">
              <div class="col-md-4 offset-md-8 ">
                <p class="lead fw-bold mb-0" style="color: Green;">{{app.session.get('panier').getGrandTotal()|number_format(2, ',', ',')}} $ </p>
              </div>
            </div>

      


              </div>
            </div>

            <div class="row my-4">
                <a href="{{path('app_panier')}}" class="btn btn-primary btn-lg col-3">Retour au panier</a>
                <a href="{{path('acceuilTroupDunCoup')}}" class="btn btn-primary btn-lg offset-1 col-3">Retour au catalogue</a>
                <a href="{{path('app_commande_paye')}}" class="btn btn-success btn-lg offset-1 col-3">Valider</a>
              </div>

            <p class="mt-4 pt-2 mb-0">Besoin d'aide? <a href="{{path('about_us')}}" style="color: Green;">Contactez
                nous</a></p>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}

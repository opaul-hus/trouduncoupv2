{% extends ('base.html.twig') %}
    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="{{asset('css/custom.css')}}" type="text/css" media="all" />
    {% endblock %}


{% block javascripts %}
    <script src="/js/validationCommande.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}

{% block title %}Paiement de la commande{% endblock %}
{% block body %}

<div class="col-9 mx-auto" >
         <h3 id="formTitle" class="my-5">Paiement de la commande</h3>
         <form method="post" onsubmit="return(validerCC(this));" id="carteCr">
           <table>
             <tbody><tr>
               <td><h3 >Type de carte de crédit</h3></td>
             </tr>
             <tr>
               <td>
                  <input type="radio" value="V" name="carteC" id="visa">  <img               src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
 alt="Visa" width="45"> 
                  <input type="radio" value="M" name="carteC">           <img src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg" alt="MC" width="45">
		          <input type="radio" value="A" name="carteC">           <img               src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
 alt="Amex" width="45">
               </td>
             </tr>
             <tr>
               <td><h3>Saisissez le numéro (sans espace)</h3>
             </td></tr>
             <tr>
               <td><input type="text" size="20" maxlength="20" name="noCarte"></td></tr>
             <tr>
               <td><h3>Date d'expiration</h3></td>
             </tr>
             <tr>
               <td><h4>Mois
                 <select name="mois" class="credit"> 
                   <option value="01">01</option>
                   <option value="02">02</option>
                   <option value="03">03</option>
                   <option value="04" >04</option>
                   <option value="05" selected="">05</option>
                   <option value="06">06</option>
                   <option value="07">07</option>
                   <option value="08">08</option>
                   <option value="09">09</option>
                   <option value="10">10</option>
                   <option value="11">11</option>
                   <option value="12">12</option>
                 </select>
                 &nbsp;&nbsp;Année
	             <select name="annee" class="credit">
	               <option value="2024">2024</option>
	               <option value="2025">2025</option>
	               <option value="2026">2026</option>
	               <option value="2027">2027</option>
                 </select></h4>	
               </td>
             </tr>      
             <tr>
               <td><input type="submit" value="Valider" name="ValiderCC" class="btn btn-danger"><br><hr></td>  
             </tr>
           </tbody></table>
         </form> 
         <a href="/panier" class="btn btn-primary">Retour au panier</a>
         <a href="/" class="btn btn-primary">Retour au catalogue</a>
      </div>
      {% endblock %}
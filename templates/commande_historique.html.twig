{% extends 'base.html.twig' %}
    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="{{asset('css/custom.css')}}" type="text/css" media="all" />
    {% endblock %}


{% block javascripts %}
    <script src="/js/TimerAnnulation.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

{% endblock %}

{% block title %}Details des commandes{% endblock %}

{% block body %}
<script>startAutoRefresh()</script>
{% for commande in commandes %}


<section class="h-100 h-custom" style="background-color: #eee;" >
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card border-top border-bottom border-3" style="border-color: Green !important;">
          <div class="card-body p-5">

            <p class="lead fw-bold mb-5" style="color: Green;">Commande {{commande.id}} -            Total {{commande.getTotal|number_format(2, ',', ',')}} $</p>

            <div class="row">
              <div class="col mb-3">
                <p class="small text-muted mb-1">Date</p>
                <p>{{commande.date |date("m/d/Y","America/New_York") }}</p>
                {% if commande.cancelable %}
                <p>{{commande.getCountDown}}</p>
                
                <a href={{path('app_commande_demmandeAnnuler',{id: commande.id})}} class="btn btn-danger">Annuler</a>
                {% endif %}
              </div>
            </div>

            <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
      {% for CommandeDetail in commande.getCommandeDetail %}

              <div class="row">
                <div class="col-8">
                  <p>{{CommandeDetail.produits.nom}}</p>
                </div>
  
                   <div class="col-4">
                    <p>X {{CommandeDetail.quantite}} </p>
                    </div>
            
   
                     {% endfor %}  
              </div>
             


      

                </div>
              </div>
            </div>
        </div>
    </div>
  </div>
</section>
 {% endfor %}  

{% endblock %}

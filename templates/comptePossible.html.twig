{% extends ('base.html.twig') %}
    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="{{asset('css/custom.css')}}" type="text/css" media="all" />
    {% endblock %}


{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}

{% block title %}Dossier de compte{% endblock %}
{% block body %}
<div class="container">
    <div class="row col-6 mx-auto">    
        <h3 id="formTitle">Dossier de compte</h3>
        <section class="mt-2">
            <p><strong>Nom d'utilisateur :</strong> {{app.session.get('client_possible').username}}</p>
        </section>
        <section class="mt-2">
            <p><strong>Prénom :</strong> {{app.session.get('client_possible').prenom}}</p>
        </section>
        <section class="mt-2">
            <p><strong>Nom :</strong> {{app.session.get('client_possible').nom}}</p>
        </section>
        <section class="mt-2">
            <p><strong>Genre :</strong> {{app.session.get('client_possible').genre}}</p>
        </section>
        <section class="mt-2">
            <p><strong>Adresse :</strong> {{app.session.get('client_possible').adresse}}</p>
        </section>
        <section class="mt-2">
            <p><strong>Ville :</strong> {{app.session.get('client_possible').ville}}</p>
        </section>
        <section class="mt-2">
            <p><strong>Province :</strong> {{app.session.get('client_possible').province}}</p>
        </section>
        <section class="mt-2">
            <p><strong>Code postal :</strong> {{app.session.get('client_possible').codePostal}}</p>
        </section>
        <section class="mt-2">
            <p><strong>Numéro de téléphone :</strong> {{app.session.get('client_possible').numeroTel}}</p>
        </section>

        <div class="row">
            <div class="col-6">
                <a href="{{path('inserer_compte')}}" class="btn btn-sucess">Accepter</a>
            </div>
            <div class="col-6">
                <a href="{{path('app_cree_controler')}}" class="btn btn-danger">Annuler</a>
            </div>
        
    
    </div>


{% endblock %}